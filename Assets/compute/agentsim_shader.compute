#pragma kernel CSMain
#pragma kernel ImageProcess

RWTexture2D<float4> Result;

float _dt;

int _width;
int _height;
float _time;


// agent update loop
[numthreads(8,8,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    if (id.x >= _width || id.y >= _height) return;
    float x = id.x - float(_width)/2.0;
    float y = id.y - float(_height)/2.0;
    Result[id.xy] = float4(x/8.0,y/8.0, 0.0, 1.0);

}

